<h1>Weapons</h1>

<table>
	<tr>
		<th>Weapon</th>
		<th>Type</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
<% @weapons.each do |weapon| %>
	<tr>
		<td><%= weapon.name %></td>
		<td><%= weaponType weapon.ranged %></td>
		<td><%= link_to 'Show', weapon %></td>
		<td><%= link_to 'Edit', edit_weapon_path(weapon) %></td>
		<td><%= link_to 'Delete', weapon, :confirmation => "Are you sure?", :method => :delete %></td>
	</tr>
<% end %>
</table>

