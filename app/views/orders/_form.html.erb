<%= form_for @order do |f| %>
  <%= display_errors @order %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :desc %><br />
		<%= f.text_area :desc %>
	</div>
	<div class="field">
		<%= f.label :multi %>
		<%= f.check_box :multi %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>