<table class="stat_table">
	<tr>
		<th class="left_align">SPELLS</th>
		<th>COST</th>
		<th>RNG</th>
		<th>AOE</th>
		<th>POW</th>
		<th>UP</th>
		<th>OFF</th>
	</tr>

<% spells.each do |spell| %>
	<tr>
		<td class="left_align"><%= spell.name %></td>
		<td><%= spell.cost %></td>
		<td><%= spell.rng %></td>
		<td><%= statDash spell.aoe %></td>
		<td><%= statDash spell.pow %></td>
		<td><%= bool2Affirm spell.up %></td>
		<td><%= bool2Affirm spell.off %></td>
	</tr>
	<tr>
		<td colspan="7" class="left_align"><%= spell.desc %></td>
	</tr>
<% end %>
</table>