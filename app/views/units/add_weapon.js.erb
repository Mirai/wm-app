if(<%= @weapon.ranged %>) {
	$("#weapons_stats_<%= @unit.id %>").append("<%= escape_javascript(render :partial => 'weapons/ranged', :locals => { :weapon => @weapon }) %>");
} else {
	$("#weapons_stats_<%= @unit.id %>").append("<%= escape_javascript(render :partial => 'weapons/melee', :locals => { :weapon => @weapon, :str => @unit.str }) %>");
}

$("#unit_weapons option[value='<%= @weapon.id %>']").remove();