<div class="order_fields">
	<div class="field">
		<%#= f.hidden_field :unit_id %>
		<%= f.collection_select :order_id, Order.order(:name), :id, :name, {}, :class => 'order_select' %>
		<%= f.collection_select :parent_id, @available_orders, :id, :order_name, { :include_blank => "No parent" }, :class => 'parent_select' %>
		<%= f.text_field :skill_check, :size => 2, :maxlength => 2 %>
		
		<%#= f.hidden_field :_destroy %>
		<%# link_to_function 'Remove', 'remove_fields(this, "order_fields")' %>
		<%= link_to 'Remove', '#', :class => 'remove' %>
	</div>
</div>