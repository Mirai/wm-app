<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
	<%= yield :javascript %>
  </head>
  <body>	
    <div id="container">
		<%= link_to 'Factions', root_path %> |
		<%= link_to 'Unit Types', unit_types_path %> |
		<%= link_to 'Units', units_path %> |
		<%= link_to 'Weapons', weapons_path %> |
		<%= link_to 'Weapon Abilities', abilities_path %> |
		<%= link_to 'Orders', orders_path %> |
		<%= link_to 'Spells', spells_path %> |
		<%= link_to 'Damage Grids', damage_grids_path %>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
